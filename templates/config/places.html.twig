{% extends 'config/base.html.twig' %}

{% block content %}
<section class="section">
  <div class="container">
    <div class="box">
      <h2 class="title is-3">
        <span class="icon-text">
          <span class="icon">
            <i class="mdi mdi-hospital-building"></i>
          </span>
          <span>Locais de Atendimento</span>
      </h2>

      {% set places = app.user.getPlaces %}

      <table class="table is-striped is-hoverable is-fullwidth">
        <thead>
          <tr>
            <td>Nome</td>
            <td>CNES</td>
            <td>Ações</td>
          </tr>
        </thead>
        <tbody>
        {% if places|length %}
        {% for place in places %}
          <tr>
            <td>{{ place.getName }}</td>
            <td>{{ place.getCnes }}</td>
            <td></td>
          </tr>
        {% endfor %}
        {% else %}
          <tr>
            <td colspan="3" class="has-text-centered">Nenhum local de atendimento cadastrado.</td>
          </tr>
        {% endif %}
        </tbody>
      </table>

      <div class="field">
        <div class="control is-expanded">
          <a class="button is-success is-fullwidth" href="{{ path('config_place_new') }}">
            <span class="icon-text">
              <span class="icon">
                <i class="mdi mdi-plus"></i>
              </span>
              <span>Criar Local de Atendimento</span>
            </span>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}
